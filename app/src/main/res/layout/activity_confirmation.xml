<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ConfirmationActivity">

    <!-- Judul Halaman -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="Order Food"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Confirmation Nama Makanan -->
    <TextView
        android:id="@+id/foodname_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Food Name: Ramen"
        android:textSize="18sp" />

    <!-- Confirmation Jumlah Porsi -->
    <TextView
        android:id="@+id/serving_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Number of Servings: 2 pax"
        android:textSize="18sp" />

    <!-- Confirmation Nama pengorder -->
    <TextView
        android:id="@+id/ordername_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Ordering Name: Vinae"
        android:textSize="18sp" />

    <!-- Input Catatan Tambahan -->
    <TextView
        android:id="@+id/note_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Additional Notes: Level 3"
        android:textSize="18sp" />

    <!-- Input Catatan Tambahan -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Thanks for your order and please wait for delivering by nearest courier"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/backtoMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="Back to Menu" />

</LinearLayout>